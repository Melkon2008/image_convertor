<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical"
    android:background="@color/seri">
    <LinearLayout
        android:id="@+id/converterlayaut1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:textSize="17dp"
            android:textStyle="bold"
            android:backgroundTint="@color/Yellow"
            android:textColor="@color/seri"
            android:id="@+id/zip_openGalleryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose file"
            />


        <ImageView
            android:id="@+id/zip_imageView"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:src="@drawable/draw2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/converterlayaut2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/converterlayaut1">

        <RadioGroup
            android:id="@+id/converter_radio"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="@color/Yellow"
                android:textSize="20dp"
                android:id="@+id/zip_converter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip" />

            <RadioButton
                android:textColor="@color/Yellow"
                android:textSize="20dp"
                android:id="@+id/pdf_converter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pdf" />



        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:textStyle="bold"
            android:backgroundTint="@color/Yellow"
            android:textColor="@color/seri"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/zip_button_choose_verj"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="20dp"/>





    </LinearLayout>


</LinearLayout>